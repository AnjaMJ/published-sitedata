"use strict";

const fs = require('fs');
const nconf = require('nconf');

nconf.argv();


const runner = require('../lib/RecipeFolder').RecipeFolder;
const path   = require('path');
const parent_folder = nconf.get('input');
const output = nconf.get('output') || 'output';


(new runner(parent_folder,{debug:nconf.get('debug'), output: output })).ready.catch(function(err) {
	console.log(err,err.stack);
});